class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        int i = m -1;
        int j = n -1;
        int sum = m + n -1;

        while (i >= 0 || j>=0)
        if(i < 0){
            nums1[sum--] = nums2[j--];
        }
        else if(j <0){
            nums1[sum--] = nums1[i--];
        }
        else if(nums1[i] > nums2[j]){
            nums1[sum--] = nums1[i--];
        }
        else{
            nums1[sum--] = nums2[j--]; 
        }
    }
};
